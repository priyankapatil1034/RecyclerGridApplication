        android:id="@+id/textview_name">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age-24"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textview_age">
    </TextView>
</LinearLayout>